<div class="py-5">
  <h1 class="text-4xl my-5 font-extrabold text-center">Better<span class="font-normal text-blue-500">Service</span></h1>
  <h2 class="text-center text-2xl font-extrabold">{{pagina}}</h2>
  {{#if errores}}
        <div class="max-w-md mx-auto my-10">
            {{#each errores}}
            <p class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold">{{this.msg}}</p>
            {{/each}}
        </div>
  {{/if}}
  <div class="mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">
      <form class="space-y-5" action="/auth/signup" method="POST">
        <div>
          <label class="block text-md uppercase text-gray-600 mb-2 font-bold" for="name">Name</label>
          <input id="name" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="yourname" placeholder="Your Name" value="{{usuario.yourname}}" />
        </div>

        <div>
          <label class="block text-md uppercase text-gray-600 mb-2 font-bold" for="surname">Surname</label>
          <input id="surname" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="yoursurname" placeholder="Your Surname" value="{{usuario.yoursurname}}" />
        </div>

        <div>
          <label class="block text-md uppercase text-gray-600 mb-2 font-bold" for="email">Registration email</label>
          <input id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="email" name="email" placeholder="Email" value="{{usuario.email}}" />
        </div>

        <div>
          <label class="block text-md uppercase text-gray-600 mb-2 font-bold" for="password">Password</label>
          <input id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="password" name="yourpassword" placeholder="Your Password" />
        </div>

        <div>
          <label class="block text-md uppercase text-gray-600 mb-2 font-bold" for="repeatpassword">Repeat Password</label>
          <input id="repeatpassword" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="password" name="repeatpassword" placeholder="Repeat Your Password" />
        </div>

        <div class="flex items-center justify-between">
          <a class="text-gray-500 text-xs" href="/auth/login">Do you have a account? Log In</a>
          <a class="text-gray-500 text-xs" href="/auth/forgot-password">Forgot password?</a>
        </div>

        <input class="w-full bg-blue-500 hover:bg-blue-700 text-white font-medium py-3 cursor-pointer rounded" type="submit" value="Sign Up">
      </form>
    </div>
  </div>
</div>