<div class="bg-white shadow-lg py-8 px-4 rounded mx-auto  max-w-5xl my-10 md:px-10">
    
        <img class="w-full" src="{{image}}" alt="Image of your service">
        <div class="px-6 py-4">
            <div class="font-bold text-xl mb-2">{{name}}</div>
            <p class="text-gray-700 text-base">{{description}}</p>
            <p class="text-gray-700 text-base mt-5">Address: {{address}}</p>
        </div>
        <div class="px-6 pt-4 pb-2">
            <a href="/{{_id}}/edit-my-service" class="inline-block bg-gray-200 hover:bg-gray-300 cursor-pointer rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Edit</a>
            <a href="/{{_id}}/delete-my-service" class="inline-block bg-gray-200 hover:bg-gray-300 cursor-pointer rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Delete</a>
        </div>
    
</div>
